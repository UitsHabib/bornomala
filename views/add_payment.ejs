<% include partials/header.ejs %>
<section class="footer_contact_area section-padding">
    <div class="container-fluid">
        <div class="row">
            <div class="section-title text-center wow zoomIn">
                <h2>Add Payment</h2>
                <span></span>
            </div>
            <div class="col-md-8 col-md-offset-2 col-sm-12 col-xs-12">
                <div class="footer_contact">
                    <form action="/add-payment" method="post" enctype="multipart/form-data">
                        <% include partials/messages.ejs %>
                        <div class="row">
                            <div class="form-group col-md-12">
                                <label for="CochingId">Coching ID:</label>
                                <input type="text" name="CochingId" class="form-control" id="CochingId"
                                    placeholder="eg... 5000" required="required">
                            </div>
                            <div class="form-group col-md-12">
                                <label for="name">Name:</label>
                                <input type="text" name="name" class="form-control" id="first-name" placeholder="Name"
                                    required="required">
                            </div>

                            <div class="form-group col-md-12">
                                <label for="name">Choose Year:</label> <br>
                                <select name='year' style="width: 100%; height: 40px;">
                                    <option selected>Select the year</option>
                                    <option value='2020'>2020</option>
                                    <option value='2021'>2021</option>
                                    <option value='2022'>2022</option>
                                    <option value='2023'>2023</option>
                                    <option value='2024'>2024</option>
                                    <option value='2025'>2025</option>
                                    <option value='2026'>2026</option>
                                    <option value='2027'>2027</option>
                                    <option value='2028'>2028</option>
                                    <option value='2029'>2029</option>
                                    <option value='2030'>2030</option>
                                </select>
                            </div>
                            

                            <div class="form-group col-md-12">
                                <label for="name">Choose Month:</label> <br>
                                <select name='month' style="width: 100%; height: 40px;">
                                    <option selected>Select the month</option>
                                    <option value='1'>January</option>
                                    <option value='2'>February</option>
                                    <option value='3'>March</option>
                                    <option value='4'>April</option>
                                    <option value='5'>May</option>
                                    <option value='6'>June</option>
                                    <option value='7'>July</option>
                                    <option value='8'>August</option>
                                    <option value='9'>September</option>
                                    <option value='10'>October</option>
                                    <option value='11'>November</option>
                                    <option value='12'>December</option>
                                </select>
                            </div>


                            <div class="form-group col-md-12">
                                <label for="date">Payment Date:</label>
                                <input type="date" name="PaymentDate" class="form-control" id="datepicker"
                                    required="required">
                            </div>
                            <div class="form-group col-md-12">
                                <div class="input-group-prepend">
                                    <label for="inputGroupSelect01">Types</label>
                                </div>
                                <select name="type" class="form-control" id="inputGroupSelect01">
                                    <option selected>Select</option>
                                    <option value="Student">Student</option>
                                    <option value="Teacher">Teacher</option>
                                </select>
                            </div>
                            <div class="col-md-12">
                                <div class="actions">
                                    <input type="submit" value="Add Payment" name="submit" id="submitButton"
                                        class="btn  btn-contact-bg" title="Submit Payment!" />
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div><!-- END COL -->
        </div>
        <!--- END ROW -->
    </div>
    <!--- END CONTAINER -->
</section>

<script type="text/javascript">

    document.getElementById('datepicker').valueAsDate = new Date()

</script>

