<% include partials/header.ejs %>
<section class="footer_contact_area section-padding">
    <div class="container-fluid">
        <div class="row">
            <div class="section-title text-center wow zoomIn">
                <h2>Payable Student List</h2>
                <span></span>
            </div>

            <div>
                <label style='margin-left: 46%; margin-bottom: 1%;'> Select The Required Information</label>
                <form style='margin-left:35%; margin-bottom:5%;' action='/choose-unpaid-students' method='post'>
                    <select name='Year' style='width: 25%;'>
                        <option selected>Select the year</option>
                        <option value='2020'>2020</option>
                        <option value='2021'>2021</option>
                        <option value='2022'>2022</option>
                        <option value='2023'>2023</option>
                        <option value='2024'>2024</option>
                        <option value='2025'>2025</option>
                        <option value='2026'>2026</option>
                        <option value='2027'>2027</option>
                        <option value='2028'>2028</option>
                        <option value='2029'>2029</option>
                        <option value='2030'>2030</option>
                    </select>
                    <select name='Month' style="width: 25%;">
                        <option selected>Select the month</option>
                        <option value='1'>January</option>
                        <option value='2'>February</option> 
                        <option value='3'>March</option>
                        <option value='4'>April</option>
                        <option value='5'>May</option>
                        <option value='6'>June</option>
                        <option value='7'>July</option>
                        <option value='8'>August</option>
                        <option value='9'>September</option>
                        <option value='10'>October</option>
                        <option value='11'>November</option>
                        <option value='12'>December</option>
                    </select>
                    <input type="submit" value="Show"/>
                </form>
            </div>

            <div class="col-md-8 col-md-offset-2 col-sm-12 col-xs-12">
                <!-- table for the for unpaid student list -->    
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Student Id</th>
                            <th scope="col">Student Name</th>
                            <th scope="col">Class</th>
                            <th scope="col">Profile</th>
                        </tr>
                    </thead>

                    <tbody>
                        <% info.forEach(function(item){ %>
                        <tr>
                            <td><%= item.CochingId %></td>
                            <td><%= item.StudentName %></td>
                            <td><%= item.Class %></td>
                            <td><button type="button" class="btn  btn-contact-bg"><a href="/student-info/<%= item.StudentID%>">View Profile</a></button></td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
                <!-- end of the table for unpaid student list -->
                <form action='/save_excel_unpaid_students' method='POST'>
                    <input name='data' id='data' type='text' value='<%= JSON.stringify(info) %>' hidden/>
                    <input class="btn  btn-contact-bg" style="margin-left:44%;" type='submit' value='Download'>
                </form>
            </div>
            <!-- END COL -->
        </div>
        <!--- END ROW -->
    </div>
    <!--- END CONTAINER -->
</section>


<% include partials/footer.ejs %>

